{
    "name": "archetype",
    "displayName": "Archetype language support for Visual Studio Code",
    "keywords": [
        "archetype",
        "tezos",
        "blockchain",
        "compiler",
        "smart-contract",
        "formal-verification"
    ],
    "description": "Archetype is a smart contract development solution dedicated to contract quality insurance.",
    "publisher": "edukera",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/edukera/vscode-archetype/issues"
    },
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#243564",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/edukera/vscode-archetype"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:archetype.compile",
        "onCommand:archetype.genMarkdown" 
    ],
    "main": "./out/extension.js",
    "contributes": {
        "snippets": [
            {
                "language": "archetype",
                "path": "./snippets/archetype.json"
            }
        ],
        "languages": [
            {
                "id": "archetype",
                "aliases": [
                    "archetype",
                    "archetype"
                ],
                "extensions": [
                    "arl",
                    "arlx"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "archetype",
                "scopeName": "source.archetype",
                "path": "./syntaxes/archetype.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "archetype.compile",
                "title": "Archetype: Compile contract"
            },
            {
                "command": "archetype.genMarkdown",
                "title": "Archetype: Generate markdown",
                "icon": {
                    "light": "images/cc.svg",
                    "dark": "images/cc.svg"
                }
            }
        ],
        "keybindings": [
            {
                "command": "archetype.compile",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus && editorLangId == 'archetype'"
            }
        ],
        "iconThemes": [
            {
                "id": "archetype",
                "label": "archetype",
                "path": "./themes/archetype-icon-theme.json"
            }
        ]
    },
    "menus": {
        "editor/title": [
            {
                "when": "resourceLangId != 2archetype",
                "command": "archetype.genMarkdown",
                "group": "navigation"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc  -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^10.14.7",
        "@types/vscode": "^1.34.0",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "tar": ">=4.2.2",
        "fstream": ">=1.0.12"
    }
}
